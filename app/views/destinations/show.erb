<div clas="container">
  <h1><%= @destination.capitalize %></h1>
  <% if logged_in? %>
    <% if !@current_users_list.include?(@destination) %>
      <form action="../my_wanderlist/<%= @destination %>" method="POST">
      <input type="hidden" name="_method" value="put">
      <button class="wanderlist" type="submit">Add to my wander list</button>
      </form>

    <% else %>
      <form action="../my_wanderlist/<%= @destination %>" method="POST">
      <input type="hidden" name="_method" value="delete">
      <button class="wanderlist" type="submit">Remove from my wander list</button>
    </form>
    <% end %>
  <% end %>


  <div id="main_image">
  <img src= <%= @link %> alt="Image of place"/>
  </div>
</div>
