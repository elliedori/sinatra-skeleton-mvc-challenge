<div clas="container">

<div id="location-header">
  <h2 id="place-name"><%= @destination %></h2>

    <span id="heart-buttons">
    <% if logged_in? %>
      <% if !@current_users_list.include?(@destination) %>
        <form class="add-to-wanderlist" action="../my_wanderlist/<%= @destination %>" method="POST">
        <input type="hidden" name="_method" value="put">
        <button class="wanderlist-button unselected" type="submit"><!-- Add to my wander list --></button>
        </form>

      <% else %>
        <form class="remove-from-wanderlist" action="../my_wanderlist/<%= @destination %>" method="POST">
        <input type="hidden" name="_method" value="delete">
        <button class="wanderlist-button selected" type="submit"><!-- Remove from my wander list --></button>
      </form>
      <% end %>
    <% end %>
    </span>
</div>
  <img src= <%= @link %> alt="Image of place"/>

<!-- embedded youtube video -->
<iframe id="existing-iframe-example"
        width="640" height="360"
        src="https://www.youtube.com/embed/<%= @video_id %>?enablejsapi=1"
        frameborder="0"
        style="border: solid 4px #37474F"
></iframe>

</div>
